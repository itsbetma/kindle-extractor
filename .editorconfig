# Root EditorConfig file
root = true

# Global settings (default for all files)
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Specific settings for Python files
[*.py]
max_line_length = 79  # Follows PEP 8 guidelines
indent_size = 4
